@using MvcProject.Models;
@model  List<PATIENT>



<!DOCTYPE html>
<html>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">DEU HOSPITAL</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a href="/AdminHome/Index/">Doctors</a></li>
                        <li><a href="/AdminHomePatient/Index/">Patients</a></li>
                        <li><a href="/AdminHomeAppointment/Index/">Appointment</a></li>
                        <li><a href="/AdminHomeFeedback/Index/">Feedback</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <br />
                        @using (Html.BeginForm("Logout", "AdminLogin", FormMethod.Post))
                        {

                            <input type="submit" value="LOGOUT" />
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <br />
    <br />


    @using (Html.BeginForm("Index", "AdminHomePatient", FormMethod.Get))
    {
         <p>
            <center>
                <b></b>Search Patient @Html.TextBox("p")
                <br />
                <br />
                <input type="submit" class="btn btn-primary" value="Search" />
            </center>
        </p>
     }
    <br />

    <table class="table table-bordered">
        <tr>
            <th>Patient ID</th>
            <th>Patient Name</th>
            <th>Patient Surname</th>
            <th>Patient PhoneNumber</th>
            <th>Delete</th>
        </tr>

        <tbody>
            @foreach (var ptn in Model)
            {
                <tr>
                    <td>@ptn.patientID</td>
                    <td>@ptn.patientName</td>
                    <td>@ptn.patientSurname</td>
                    <td>@ptn.phoneNumber</td>
                    <td><a href="/AdminHomePatient/DeletePatient/@ptn.patientID" class="btn btn-danger">DELETE</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />

</body>
</html>

@using MvcProject.Models;
@model  List<DOCTOR>



<!DOCTYPE html>
<html>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">DEU HOSPITAL</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a href="/PatientHome/Index/">Booking</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Feedback</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <br />
                        @using (Html.BeginForm("Logout", "AdminLogin", FormMethod.Post))
                        {

                            <input type="submit" value="LOGOUT" />
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <br />
    <br />


    <table class="table table-bordered">
        <tr>
            <th>Doctor ID</th>
            <th>Doctor Name</th>
            <th>Doctor Surname</th>
            <th>Department</th>
        </tr>

        <tbody>
            @foreach (var dctr in Model)
            {
                <tr>
                    <td>@dctr.doctorID</td>
                    <td>@dctr.doctorName</td>
                    <td>@dctr.doctorSurname</td>
                    <td>@dctr.department</td>

                </tr>
            }
        </tbody>
    </table>
    <br />

</body>
</html>
@model  MvcProject.Models.ADMIN
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 20px 20px;
        }

        .field-validation-error {
            color: red;
        }
    </style>
</head>

<body>
    <div id="login-div">
       

            @using (Html.BeginForm("Authorise", "AdminLogin", FormMethod.Post))
            {

             <table>
                <tr>
                    <td></td>
                    <td style="text-decoration:underline">Admin Login</td>
                </tr>

                <tr>
                    <td><br /></td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.adminName)</td>
                    <td>@Html.EditorFor(model => model.adminName)</td>

                </tr>

                <tr>
                    <td><br /></td>
                </tr>

                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.adminName)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.adminPassword)</td>
                    <td>@Html.EditorFor(model => model.adminPassword)</td>
                </tr>

                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.adminPassword)</td>
                </tr>

                <tr>
                    <td><br /></td>
                </tr>

                <tr>
                    <td>
                        <input class="btn btn-success" type="submit" value="Login" />
                        <input class="btn btn-danger" type="reset" value="Clear" />
                    </td>
                </tr>

             </table>

             }
   
                <script src="~/Scripts/jquery-3.4.1.min.js"></script>
                 <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    </div>
</body>

</html>


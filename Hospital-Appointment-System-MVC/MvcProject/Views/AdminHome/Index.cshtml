@using MvcProject.Models;
@model  List<DOCTOR>



<!DOCTYPE html>
<html>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">DEU HOSPITAL</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a href="/AdminHome/Index/">Doctors</a></li>
                        <li><a href="/AdminHomePatient/Index/">Patients</a></li>
                        <li><a href="/AdminHomeAppointment/Index/">Appointment</a></li>
                        <li><a href="/AdminHomeFeedback/Index/">Feedback</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <br />
                        @using (Html.BeginForm("Logout", "AdminLogin", FormMethod.Post))
                        {

                            <input type="submit" value="LOGOUT" />
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <br />
    <br />
    <br />



    @using (Html.BeginForm("Index", "AdminHome", FormMethod.Get))
    {
        <p>
            <center>
            <b></b>Department @Html.TextBox("p")
            <b></b>Name @Html.TextBox("p2")
            <br />
            <br />
            <input type="submit" class="btn btn-primary" value="Search" />
            </center>
        </p>
    }
    <br />

    <table class="table table-bordered">
        <tr>
            <th>Doctor ID</th>
            <th>Doctor Name</th>
            <th>Doctor Surname</th>
            <th>Doctor Department</th>

        </tr>


        <tbody>
            @foreach (var dctr in Model)
            {
                <tr>
                    <td>@dctr.doctorID</td>
                    <td>@dctr.doctorName</td>
                    <td>@dctr.doctorSurname</td>
                    <td>@dctr.department</td>
                    <td><a href="/AdminHome/DeleteDoctor/@dctr.doctorID" class="btn btn-danger">DELETE</a></td>
                    <td><a href="/AdminHome/GetDoctor/@dctr.doctorID" class="btn btn-success">UPDATE</a></td>
                </tr>

                <tr>
                    <th>Biography</th>
                </tr>
                <tr>
                    <td>@dctr.biography</td>
                </tr>
            }
        </tbody>
    </table>

    <br />

    <a href="/AdminHome/AddDoctor/" class="btn btn-primary">ADD DOCTOR</a>



</body>
</html>

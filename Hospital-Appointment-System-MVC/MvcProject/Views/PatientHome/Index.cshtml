@using MvcProject.Models;
@model List<APPOINTMENT>



<!DOCTYPE html>
<html>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">DEU HOSPITAL</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a href="/PatientHome/Index/">Booking</a></li>
                        <<li><a href="/PatientHomeContact/Index/">Contact</a></li>
                        <li><a href="/PatientHomeFeedback/Index/">Feedback</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <br />
                        @using (Html.BeginForm("Logout", "PatientLogin", FormMethod.Post))
                        {

                            <input type="submit" value="LOGOUT" />
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <br />
    <br />
    <br />
 
    <title> DEU Hospital </title>
        <style type="text/css">

            #metin {
                text-align: justify;
                height: cover;
                width: 1200px;
                word-wrap: break-word;
                margin: 0px auto;
                background: white;
                padding-top: 15px;
                padding-bottom: 15px;
                padding-left: 15px;
                padding-right: 15px;
                border-style: solid;
                border-width: 2px;
                border-color: #8fc1da;
                line-height: 200%
            }
        </style>
 
        <div id="metin">
            <center><font style="font-family:Trebuchet MS;font-size:48px;18px;color:#e80729;">BOOK APPOINTMENT</font></font></h1></center>
            <center><img src="~/Images/appointment.jpg"></center>
            <font style="font-family:Arial;font-size:18px;color:#black;"></font>
                The table below lists doctors' full appointments. Please make an appointment at a suitable time for you.
                <br />
                <br />

                @using (Html.BeginForm("Index", "PatientHome", FormMethod.Get))
                {
                    <p>
                        <center>
                            <b></b>Search Doctor Name @Html.TextBox("p")
                            <b></b>Search Department @Html.TextBox("p2")
                            <b></b>Search Date @Html.TextBox("p3")

                            <br />
                            <br />
                            <input type="submit" class="btn btn-success"  value="Search" />
                        </center>
                    </p>
                }
                <br />


                <table class="table table-bordered">
                    <tr>
                        <th>Doctor ID</th>
                        <th>Doctor Name</th>
                        <th>Doctor Surname</th>
                        <th>Doctor Department</th>
                        <th>Appointment Date</th>
                        <th>Appointment Hour</th>
                    </tr>
                    <tbody>
                        @foreach (var appointment in Model)
                        {
                            <tr>
                                <td>@appointment.doctorID</td>
                                <td>@appointment.doctorName</td>
                                <td>@appointment.doctorSurname</td>
                                <td>@appointment.department</td>
                                <td>@appointment.appointmentDate</td>
                                <td>@appointment.appointmentHour</td>

                            </tr>
                        }
                    </tbody>
                </table>
                <center><a href="/PatientHome/AddAppointments/" class="btn btn-primary">Add Appointment</a> </center>
        </div>

    </body> 
</html>




